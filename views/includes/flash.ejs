<!-- Success Flash Message -->
<% if(success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-6 row-3 offset-3" role="alert">
    <p>
      <%= success %>
    </p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<!-- Error Flash -->
<% if(error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show col-6 row-3 offset-3" role="alert">
    <p>
      <%= error %>
    </p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>